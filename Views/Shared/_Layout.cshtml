<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/ThemeBundle")

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />

    <!-- Data table -->
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap.min.css" />

    @* Custom *@
    <link rel="stylesheet" href="~/Content/custom-style.css" />
</head>
<body class="bootstrap-admin-with-small-navbar">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Toolroom management</a>
                </div>
                <div class="collapse navbar-collapse main-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">English</a></li>
                        <li><a href="#">Chinese</a></li>
                        <li><a href="#">Vietnamese</a></li>
                    </ul>
                    <div class="collapse navbar-collapse bootstrap-admin-navbar-sm">
                        <ul class="nav navbar-nav navbar-right ">

                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div><!-- /.navbar-collapse -->
            </div>
        </div><!-- /.container -->
    </nav>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
        <div class="row">
            <hr>
            <footer>
                <p>@DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year - Writen by TuanBinh</p>
            </footer>

        </div>
    </div>
    <div class="loaderbody" id="loaderbody">
        <div class="loader"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Scripts.js" type="text/javascript"></script>
    <script src="~/Scripts/notify.min.js" type="text/javascript"></script>

    <!-- Data Table -->
    <script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
